# History
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=1000
setopt INC_APPEND_HISTORY

### Added by Zinit's installer
if [[ ! -f $HOME/.local/share/zinit/zinit.git/zinit.zsh ]]; then
    print -P "%F{33} %F{220}Installing %F{33}ZDHARMA-CONTINUUM%F{220} Initiative Plugin Manager (%F{33}zdharma-continuum/zinit%F{220})â€¦%f"
    command mkdir -p "$HOME/.local/share/zinit" && command chmod g-rwX "$HOME/.local/share/zinit"
    command git clone https://github.com/zdharma-continuum/zinit "$HOME/.local/share/zinit/zinit.git" && \
        print -P "%F{33} %F{34}Installation successful.%f%b" || \
        print -P "%F{160} The clone has failed.%f%b"
fi

source "$HOME/.local/share/zinit/zinit.git/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit

# Load a few important annexes, without Turbo
# (this is currently required for annexes)
zinit light-mode for \
    zdharma-continuum/zinit-annex-as-monitor \
    zdharma-continuum/zinit-annex-bin-gem-node \
    zdharma-continuum/zinit-annex-patch-dl \
    zdharma-continuum/zinit-annex-rust


### End of Zinit's installer chunk

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
    source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

### Plugins
zinit ice depth"1" # git clone depth
zinit light romkatv/powerlevel10k

zinit ice depth"1" # git clone depth
zi light zsh-users/zsh-syntax-highlighting

zinit ice depth"1" # git clone depth
zi light z-shell/zsh-lsd

zinit ice depth"1" # git clone depth
zinit light romkatv/zsh-defer

# zstyle ':autocomplete:key-bindings' enabled no
zinit ice depth"1" wait"2" lucid atload"
bindkey -M menuselect  '^[[D' .backward-char  '^[OD' .backward-char
bindkey -M menuselect  '^[[C'  .forward-char  '^[OC'  .forward-char
bindkey -M menuselect '^M' .accept-line
bindkey              '^I'         menu-complete
bindkey '$terminfo[kcbt]' reverse-menu-complete

bindkey -M menuselect 'j' vi-down-line-or-history
bindkey -M menuselect 'k' vi-up-line-or-history
bindkey -M menuselect 'h' .backward-char
bindkey -M menuselect 'l' .forward-char
"
zi light zsh-users/zsh-autosuggestions

zinit ice depth"1"
zi light marlonrichert/zsh-autocomplete

zinit ice depth"1"
zi snippet OMZP::vi-mode

zinit ice depth"1"
zi snippet OMZP::git

zi snippet OMZ::lib/clipboard.zsh

zinit ice depth"1"
zi snippet OMZP::fzf

### End of plugins

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
zsh-defer eval "$(pyenv init -)" 

# aliases
alias py="python3"
alias m1off="xrandr --output DisplayPort-0 --off"
alias m1on="xrandr --output DisplayPort-0 --pos 2560x180 --mode 1920x1080 --rate 170 --primary"

# biome
export BIOME_CONFIG_PATH="$HOME/.config/nvim"

# cargo
export PATH="$PATH:$HOME/.cargo/env"

VI_MODE_SET_CURSOR=true
VI_MODE_RESET_PROMPT_ON_MODE_CHANGE=true

# Remove mode switching delay.
KEYTIMEOUT=5

# node version manager
export NVM_COMPLETION=true
export NVM_SYMLINK_CURRENT="true"
zi wait"2" lucid light-mode for lukechilds/zsh-nvm

# pager
export PAGER="less -X"

# launch hyprland on login
source ~/.config/zshrc.d/auto-Hypr.sh

timezsh() {
  shell=${1-$SHELL}
  for i in $(seq 1 10); do time $shell -i -c exit; done
}
